<?xml version="1.0" encoding="utf-8"?>
<layout>
	
	<data>
		
		<variable
				name="handlers"
				type="elamien.abdullah.socialnote.ui.RegisterActivity"/>
	</data>
	
	<androidx.constraintlayout.widget.ConstraintLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:tools="http://schemas.android.com/tools"
			xmlns:app="http://schemas.android.com/apk/res-auto"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:context=".ui.RegisterActivity">
		
		<com.airbnb.lottie.LottieAnimationView
				android:background="?android:attr/selectableItemBackground"
				android:onClick="@{handlers::onGoogleClick}"
				android:layout_margin="@dimen/auth_button_margin"
				app:lottie_speed="2.5"
				android:id="@+id/googleAnimationView"
				android:layout_width="@dimen/auth_button_width"
				app:lottie_autoPlay="true"
				android:layout_height="@dimen/auth_button_height"
				app:lottie_rawRes="@raw/google_sign_in"
				app:layout_constraintTop_toBottomOf="@+id/registerLabel"
				app:layout_constraintEnd_toEndOf="@+id/registerLabel"
				app:layout_constraintStart_toStartOf="@+id/registerLabel"
				app:layout_constraintBottom_toBottomOf="parent"/>
		
		<TextView
				android:text="@string/register_label_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/registerLabel"
				android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				android:layout_margin="20dp"
				/>
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>