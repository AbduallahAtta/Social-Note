<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:android="http://schemas.android.com/apk/res/android">
	
	<data>
		
		<variable
				name="handlers"
				type="elamien.abdullah.socialnote.ui.HomeActivity"/>
	</data>
	
	<androidx.coordinatorlayout.widget.CoordinatorLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		
		<androidx.constraintlayout.widget.ConstraintLayout
				
				android:layout_width="match_parent"
				android:layout_height="match_parent">
			
			<LinearLayout
					android:layout_margin="@dimen/app_label_marginn"
					android:id="@+id/appLabelParent"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					app:layout_constraintStart_toStartOf="parent"
					>
				
				<TextView
						android:layout_width="0dp"
						android:layout_weight="1"
						android:gravity="end"
						android:text="@string/app_social_word_label"
						android:textSize="@dimen/app_social_word_label_size"
						android:textAppearance="@style/TextAppearance.AppCompat.Title"
						android:layout_height="wrap_content"
						android:fontFamily="@font/cabin_semibold"/>
				
				<TextView
						android:layout_width="0dp"
						android:layout_weight="1"
						android:text="@string/app_note_word_label"
						android:textAppearance="@style/TextAppearance.AppCompat.Title"
						android:textSize="@dimen/app_note_word_label_size"
						android:layout_height="wrap_content"
						android:fontFamily="@font/cabin_medium"/>
			</LinearLayout>
			
			<androidx.recyclerview.widget.RecyclerView
					android:layout_width="match_parent"
					android:id="@+id/notesRecyclerView"
					android:layout_height="wrap_content"
					app:layout_constraintStart_toStartOf="parent"
					app:spanCount="2"
					android:visibility="visible"
					tools:listitem="@layout/list_item_notes"
					app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
					app:layout_constraintTop_toBottomOf="@+id/appLabelParent"/>
			
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:visibility="gone"
					android:id="@+id/noteEmptyStateLayout"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent">
				
				<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Your note list is empty"
						android:layout_gravity="center"
						android:paddingTop="12dp"
						android:gravity="center"
						android:textAppearance="@style/TextAppearance.AppCompat.Title"/>
				
				<com.airbnb.lottie.LottieAnimationView
						android:id="@+id/lottieAnimationView"
						android:layout_width="match_parent"
						app:lottie_autoPlay="true"
						app:lottie_loop="true"
						android:layout_weight="3"
						android:layout_height="0dp"
						app:lottie_rawRes="@raw/empty_state"
						/>
			</LinearLayout>
		
		</androidx.constraintlayout.widget.ConstraintLayout>
		
		<com.google.android.material.floatingactionbutton.FloatingActionButton
				android:id="@+id/addNewNoteFAB"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom|end"
				android:layout_margin="16dp"
				android:onClick="@{handlers::onNewNoteFabClick}"
				app:srcCompat="@drawable/ic_author"/>
	
	</androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
