<?xml version="1.0" encoding="utf-8"?>
<layout>
	
	<data>
		
		<variable
				name="note"
				type="elamien.abdullah.socialnote.database.Note"/>
	</data>
	
	<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
									   xmlns:app="http://schemas.android.com/apk/res-auto"
									   android:layout_width="200dp"
									   android:layout_margin="4dp"
									   android:layout_height="wrap_content"
									   app:cardCornerRadius="4dp"
									   app:cardElevation="1dp">
		
		<LinearLayout
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_height="match_parent">
			
			<TextView
					android:text="@{note.note}"
					android:layout_width="match_parent"
					android:id="@+id/listItemNoteBody"
					android:layout_height="120dp"/>
			
			<View
					android:layout_width="match_parent"
					android:layout_margin="1.5dp"
					android:background="#eeeeee"
					android:layout_height="1.5dp"/>
			
			<TextView
					android:text="@{@string/format(note.dateCreated)}"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="end"
					android:layout_margin="2dp"
					android:id="@+id/listItemNoteCreateAt"/>
			
			<TextView
					android:text="@{@string/format(note.dateModified)}"
					android:layout_margin="2dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="end"
					android:id="@+id/listItemNoteModifiedAt"/>
		</LinearLayout>
	</androidx.cardview.widget.CardView>
</layout>