<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:aztec="http://schemas.android.com/apk/res-auto">
	
	<data>
		
		<variable
				name="handlers"
				type="elamien.abdullah.socialnote.ui.AddEditNoteActivity" />
	</data>
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/white"
			android:focusableInTouchMode="true"
			android:orientation="vertical">
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
			
			<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/noteTitleInputText"
					android:layout_width="0dp"
					android:layout_height="@dimen/title_text_height"
					android:layout_weight="2"
					android:background="@color/white"
					android:hint="@string/text_title_label"
					android:padding="@dimen/title_text_padding"
					android:textColor="@color/text_title_color"
					android:textColorHint="@color/text_color_hint" />
			
			<TextView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:background="?android:attr/selectableItemBackground"
					android:clickable="true"
					android:focusable="true"
					android:gravity="center"
					android:onClick="@{handlers::onLocationReminderClick}"
					android:text="@string/location_reminder_label"
					android:textColor="@color/secondaryColor" />
			
			<TextView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:background="?android:attr/selectableItemBackground"
					android:clickable="true"
					android:focusable="true"
					android:gravity="center"
					android:onClick="@{handlers::onSetReminderClick}"
					android:text="@string/set_reminder_label"
					android:textColor="@color/secondaryColor" />
		</LinearLayout>
		
		<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">
			
			<org.wordpress.aztec.toolbar.AztecToolbar
					android:id="@+id/formatting_toolbar"
					android:layout_width="match_parent"
					android:layout_height="@dimen/aztec_format_bar_height"
					android:layout_alignParentBottom="true"></org.wordpress.aztec.toolbar.AztecToolbar>
			
			<ScrollView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_above="@+id/formatting_toolbar"
					android:layout_alignParentTop="true"
					android:fillViewport="true">
				
				<FrameLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content">
					
					<org.wordpress.aztec.AztecText
							android:id="@+id/aztec"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:gravity="top|start"
							android:imeOptions="flagNoExtractUi"
							android:padding="@dimen/editor_padding"
							android:scrollbars="vertical"
							aztec:backgroundColor="#fff"
							aztec:historyEnable="true"
							aztec:historySize="10"
							aztec:textColor="#000" />
					
					<org.wordpress.aztec.source.SourceViewEditText
							android:id="@+id/source"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:gravity="top|start"
							android:imeOptions="flagNoExtractUi"
							android:inputType="textNoSuggestions|textMultiLine"
							android:padding="@dimen/editor_padding"
							android:scrollbars="vertical"
							
							android:textSize="@dimen/editor_text_size"
							android:visibility="gone"
							aztec:codeBackgroundColor="@android:color/transparent"
							aztec:codeTextColor="@android:color/white" />
				
				</FrameLayout>
			
			</ScrollView>
		
		</RelativeLayout>
	
	</LinearLayout>
</layout>