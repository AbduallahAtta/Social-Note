<resources>    <!-- Base application theme. -->    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">        <item name="android:fontFamily">@font/average_sans</item>        <item name="colorPrimary">@color/colorPrimary</item>        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>        <item name="colorAccent">@color/colorAccent</item>        <item name="windowActionModeOverlay">true</item>        <item name="android:actionModeBackground">@color/primaryColor</item>    </style>    <style name="EditorTheme" parent="@style/Theme.MaterialComponents.Light.DarkActionBar">        <item name="android:fontFamily">@font/average_sans</item>        <item name="colorPrimary">@color/colorPrimary</item>        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>        <item name="colorAccent">@color/colorAccent</item>    </style>    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">        <item name="android:windowBackground">@drawable/splash_screen_background</item>    </style></resources>